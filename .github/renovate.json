{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "requireConfig": "ignored",
  "allowScripts": true,
  "platform": "github",
  "platformCommit": true,
  "repositories": ["egmacke/rush-example"],

  "allowedPostUpgradeCommands": [
    "^node common/scripts/install-run-rush.js",
    "^node common/scripts/install-run-rush.js update",
    "^node common/scripts/install-run-rush.js change .*"
  ],
  "allowPostUpgradeCommandTemplating": true,
  "postUpgradeTasks": {
    "commands": [
      "node common/scripts/install-run-rush.js update"
    ],
    "fileFilters": [
      "common/config/rush/browser-approved-packages.json",
      "common/config/rush/nonbrowser-approved-packages.json",
      "common/config/rush/repo-state.json",
      "common/config/rush/pnpm-lock.yaml",
      "common/changes/**/*.json"
    ],
    "executionMode": "update"
  },


  "branchPrefix": "renovate/",
  "username": "synap-devbot",
  "gitAuthor": "Synap DevBot <71255911+egmacke@users.noreply.github.com>",
  "forkProcessing": "enabled",
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch",
        "minor",
        "major",
        "lockFileMaintenance"
      ]
    }
  ],
  "rangeStrategy": "pin",
  "rebaseWhen": "behind-base-branch",
  
  "prHourlyLimit": 0,
  "prConcurrentLimit": 4,

  "prBodyTemplate": "{{{header}}}{{{table}}}{{{warnings}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{footer}}}"
}
