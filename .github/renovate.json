{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "requireConfig": "ignored",
  "allowScripts": true,
  "platform": "github",
  "repositories": [
    "egmacke/rush-example"
  ],

  "allowedPostUpgradeCommands": [
    "^node common/scripts/install-and-run-rush.js",
    "^node common/scripts/install-and-run-rush.js update",
    "^node common/scripts/install-and-run-rush.js change .*"
  ],
  "allowPostUpgradeCommandTemplating": true,
  "postUpgradeTasks": {
    "commands": [
        "node common/scripts/install-run-rush.js update",
        "node common/scripts/install-run-rush.js change --bulk --message \"{{{prTitle}}}\" --bump-type patch"
    ],
    "fileFilters": [
        "common/config/rush/browser-approved-packages.json",
        "common/config/rush/nonbrowser-approved-packages.json",
        "common/config/rush/repo-state.json",
        "common/config/rush/pnpm-lock.yaml",
        "common/changes/**/*.json"
    ],
    "executionMode": "branch"
  },


  "dependencyDashboardFooter": "\n- [ ] <!-- manual job -->Check this box to trigger a request for Renovate to run again on this repository\n",
  "enabled": true,
  "forkProcessing": "enabled",
  "gitAuthor": "renovate[bot] <29139614+renovate[bot]@users.noreply.github.com>",
  "gitIgnoredAuthors": [
    "29139614+renovate[bot]@users.noreply.github.com"
  ],
  "prHeader": "[![Mend Renovate](https://app.renovatebot.com/images/banner.svg)](https://renovatebot.com)",
  "platformCommit": true,
  
  "prFooter": "This PR has been generated by [Mend Renovate](https://www.mend.io/free-developer-tools/renovate/). View repository job log [here](https://developer.mend.io/{{platform}}/{{repository}})."
}
